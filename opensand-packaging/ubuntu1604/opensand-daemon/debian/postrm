#!/bin/sh
# postrm script for opensand-daemon
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

remove_syslog_conf(){
    EXE_RM="/bin/rm"
    SYSLOG_CONF="/etc/rsyslog.d/opensand-daemon.conf"
    LOGROTATE_CONF="/etc/logrotate.d/opensand-daemon.conf"

    ${EXE_RM} -f ${SYSLOG_CONF} || true
    ${EXE_RM} -f ${LOGROTATE_CONF} || true
}

remove_opensand_conf(){
    EXE_RM="/bin/rm"
    EXE_RMDIR="/bin/rmdir"
    CONF="/etc/opensand"
    DAEMON_CONF="/etc/opensand/daemon.conf"
    CORE_CONF="/etc/opensand/core.conf"
    DHCP_CONF="/etc/dnsmasq.d/lan_st.conf"
    # TODO check for plugins and other deployed files to remove

    ${EXE_RM} -f ${DAEMON_CONF} ${CORE_CONF} ${DHCP_CONF} || true
    ${EXE_RMDIR} --ignore-fail-on-non-empty ${CONF} || true
}

remove_cache(){
    rm -f /var/cache/sand-daemon/* || true
}

delete_interfaces(){
	/usr/bin/opensand_interfaces -d 1>/dev/null 2>&1 || true
}

case "$1" in
    purge)
        remove_syslog_conf
        remove_opensand_conf
        remove_cache
        delete_interfaces
    ;;    
        
    remove)
        remove_cache
        delete_interfaces
    ;;

    upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

