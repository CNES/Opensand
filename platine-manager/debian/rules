#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

override_dh_auto_install:
	python setup.py install --root=$(CURDIR)/debian/tmp --install-layout=deb

override_dh_install:
	dh_install
	# install Ubuntu desktop elements
	install -D -m 0644 images/icones/platine-manager.svg $(CURDIR)/debian/platine-manager-gui/usr/share/icons/hicolor/scalable/apps/platine-manager.svg
	install -D -m 0644 images/icones/platine-manager32.png $(CURDIR)/debian/platine-manager-gui/usr/share/icons/hicolor/32x32/apps/platine-manager.png
	install -D -m 0644 images/icones/platine-manager48.png $(CURDIR)/debian/platine-manager-gui/usr/share/icons/hicolor/48x48/apps/platine-manager.png
	install -D -m 0644 images/icones/platine-manager32.png $(CURDIR)/debian/platine-manager-gui/usr/share/pixmaps/platine-manager32.png
	install -D -m 0644 images/icones/platine-manager32.png $(CURDIR)/debian/platine-manager-gui/usr/share/pixmaps/platine-manager.png
	install -D -m 0644 images/icones/platine-manager48.png $(CURDIR)/debian/platine-manager-gui/usr/share/pixmaps/platine-manager48.png
	install -D -m 0644 platine-manager.desktop $(CURDIR)/debian/platine-manager-gui/usr/share/applications/platine-manager.desktop
	# install configuration for syslog/logrotate
	install -D -m 0644 conf/syslog.conf $(CURDIR)/debian/platine-manager-gui/etc/rsyslog.d/platine-manager.conf
	install -D -m 0644 conf/logrotate.conf $(CURDIR)/debian/platine-manager-gui/etc/logrotate.d/platine-manager.conf


override_dh_pysupport:

%:
	dh  $@
