<?xml version="1.0" encoding="utf-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

<!-- TODO add types as in OpenSandCore.h -->
<!-- TODO for RBDC_max use 8M as we cannot send more in CR -->
<xsd:simpleType name="talId">
    <xsd:restriction base="xsd:nonNegativeInteger">
        <xsd:minInclusive value="0" />
        <xsd:maxInclusive value="31" /> <!-- 0x1f -->
    </xsd:restriction>
</xsd:simpleType>

<xsd:simpleType name="carrierId">
    <xsd:restriction base="xsd:positiveInteger">
        <xsd:minInclusive value="1" />
        <xsd:maxInclusive value="7" />
    </xsd:restriction>
</xsd:simpleType>

<xsd:simpleType name="ipv4Address">
    <xsd:restriction base="xsd:string">
        <xsd:pattern value="((25[0-5]|2[0-4][0-9]|[01]?[0-9]?[0-9])\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9]?[0-9])" />
    </xsd:restriction>
</xsd:simpleType>

<xsd:simpleType name="port">
    <xsd:restriction base="xsd:positiveInteger">
        <xsd:minInclusive value="1500" />
        <xsd:maxInclusive value="65535" />
    </xsd:restriction>
</xsd:simpleType>

<xsd:simpleType name="file">
    <xsd:restriction base="xsd:string">
    </xsd:restriction>
</xsd:simpleType>

<xsd:simpleType name="attenuationLink">
    <xsd:restriction base="xsd:string">
        <xsd:enumeration value="up" />
        <xsd:enumeration value="down" />
    </xsd:restriction>
</xsd:simpleType>

<xsd:simpleType name="attenuationType">
    <xsd:restriction base="xsd:string">
        <xsd:enumeration value="Ideal" />
        <xsd:enumeration value="File" />
        <xsd:enumeration value="On/Off" />
        <xsd:enumeration value="Triangular" />
    </xsd:restriction>
</xsd:simpleType>

<xsd:simpleType name="minimalCondition">
    <xsd:restriction base="xsd:string">
        <xsd:enumeration value="ACM-Loop" />
        <xsd:enumeration value="Constant" />
    </xsd:restriction>
</xsd:simpleType>

<xsd:simpleType name="errorInsertion">
    <xsd:restriction base="xsd:string">
        <xsd:enumeration value="Gate" />
    </xsd:restriction>
</xsd:simpleType>


<!-- fifo types -->
<xsd:simpleType name="className">
    <xsd:restriction base="xsd:string">
        <xsd:enumeration value="NM" />
        <xsd:enumeration value="EF"/>
        <xsd:enumeration value="SIG"/>
        <xsd:enumeration value="AF"/>
        <xsd:enumeration value="BE"/>
    </xsd:restriction>
</xsd:simpleType>

<xsd:simpleType name="classId">
    <xsd:restriction base="xsd:integer">
        <xsd:minInclusive value="0" />
        <xsd:maxInclusive value="31" />
    </xsd:restriction>
</xsd:simpleType>


<!-- physical_layer sections description -->
<xsd:element name="uplink_physical_layer">
    <xsd:annotation>
        <xsd:documentation xml:lang="en">
            <![CDATA[
            <b>The physical layer attenuation for uplink: </b>
            <a href="http://opensand.org/support/wiki/doku.php?id=design:physical_layer">Physical Layer design</a>
            ]]>
        </xsd:documentation>
    </xsd:annotation>
    <xsd:complexType>
        <xsd:sequence>
            <xsd:element name="attenuation_model_type" type="attenuationType">
                <xsd:annotation>
                    <xsd:documentation xml:lang="en">
                        The type of attenuation model
                    </xsd:documentation>
                </xsd:annotation>
            </xsd:element>
            <xsd:element name="nominal_condition" type="xsd:nonNegativeInteger">
                <xsd:annotation>
                    <xsd:documentation xml:lang="en">
                        The nominal C/N
                    </xsd:documentation>
                </xsd:annotation>
            </xsd:element>
        </xsd:sequence>
    </xsd:complexType>
</xsd:element>

<xsd:element name="downlink_physical_layer">
    <xsd:annotation>
        <xsd:documentation xml:lang="en">
            <![CDATA[
            <b>The physical layer description for downlink: </b>\n
            <a href="http://opensand.org/support/wiki/doku.php?id=design:physical_layer">Physical Layer design</a>
            ]]>
        </xsd:documentation>
    </xsd:annotation>
    <xsd:complexType>
        <xsd:sequence>
            <xsd:element name="attenuation_model_type" type="attenuationType">
                <xsd:annotation>
                    <xsd:documentation xml:lang="en">
                        The type of attenuation model
                    </xsd:documentation>
                </xsd:annotation>
            </xsd:element>
            <xsd:element name="minimal_condition_type" type="minimalCondition">
                <xsd:annotation>
                    <xsd:documentation xml:lang="en">
                        The type of minimal conditions
                    </xsd:documentation>
                </xsd:annotation>
            </xsd:element>
            <xsd:element name="error_insertion_type" type="errorInsertion">
                <xsd:annotation>
                    <xsd:documentation xml:lang="en">
                        The type of error insertion
                    </xsd:documentation>
                </xsd:annotation>
            </xsd:element>
            <xsd:element name="nominal_condition" type="xsd:nonNegativeInteger">
                <xsd:annotation>
                    <xsd:documentation xml:lang="en">
                        The nominal C/N
                    </xsd:documentation>
                </xsd:annotation>
            </xsd:element>
        </xsd:sequence>
    </xsd:complexType>
</xsd:element>

<!-- types for debug section -->
<xsd:simpleType name="debugValue">
    <xsd:restriction base="xsd:nonNegativeInteger">
        <xsd:minInclusive value="0" />
        <xsd:maxInclusive value="7" />
    </xsd:restriction>
</xsd:simpleType>

<xsd:element name="levels">
    <xsd:complexType>
        <xsd:choice>
            <xsd:element ref="level" minOccurs="0" maxOccurs="unbounded"/>
        </xsd:choice>
    </xsd:complexType>
</xsd:element>

<xsd:element name="level">
    <xsd:complexType>
        <xsd:attribute name="name" type="xsd:string">
            <xsd:annotation>
                <xsd:documentation xml:lang="en">
                    A log name or part of the name
                </xsd:documentation>
            </xsd:annotation>
        </xsd:attribute>
        <xsd:attribute name="level" type="debugValue">
            <xsd:annotation>
                <xsd:documentation xml:lang="en">
                    The level
                </xsd:documentation>
            </xsd:annotation>
        </xsd:attribute>
    </xsd:complexType>
</xsd:element>

</xsd:schema>
