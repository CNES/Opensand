                </xsd:annotation>
            </xsd:element>
        </xsd:sequence>
    </xsd:complexType>
</xsd:element>

<!-- the models for physical_layer section -->
<xsd:element name="models">
    <xsd:complexType>
        <xsd:sequence>
            <xsd:element ref="model" minOccurs="2" maxOccurs="2" />
        </xsd:sequence>
