#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
PYTHON2=$(shell pyversions -vr)

%:
	dh  $@

override_dh_strip:
	dh_strip --dbg-package=libopensand-ideal-attenuation-plugin-dbg
	
override_dh_install:
	dh_install
	mkdir -p $(CURDIR)/debian/libopensand-ideal-attenuation-plugin-manager/usr/lib/python$(PYTHON2)/dist-packages/opensand_manager_core/modules
	install -m 0644 src/ideal.py $(CURDIR)/debian/libopensand-ideal-attenuation-plugin-manager/usr/lib/python$(PYTHON2)/dist-packages/opensand_manager_core/modules/ideal.py
	install -m 0644 conf/ideal.conf $(CURDIR)/debian/libopensand-ideal-attenuation-plugin-manager/usr/share/opensand/sat/plugins/ideal.conf
	install -m 0644 conf/ideal.xsd $(CURDIR)/debian/libopensand-ideal-attenuation-plugin-manager/usr/share/opensand/sat/plugins/ideal.xsd
	install -m 0644 conf/ideal.conf $(CURDIR)/debian/libopensand-ideal-attenuation-plugin-manager/usr/share/opensand/gw/plugins/ideal.conf
	install -m 0644 conf/ideal.xsd $(CURDIR)/debian/libopensand-ideal-attenuation-plugin-manager/usr/share/opensand/gw/plugins/ideal.xsd
	install -m 0644 conf/ideal.conf $(CURDIR)/debian/libopensand-ideal-attenuation-plugin-manager/usr/share/opensand/st/plugins/ideal.conf
	install -m 0644 conf/ideal.xsd $(CURDIR)/debian/libopensand-ideal-attenuation-plugin-manager/usr/share/opensand/st/plugins/ideal.xsd

override_dh_pysupport:
